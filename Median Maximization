#define loop(n) for(int i = 0;i<n;i++) cout<<arr[i]<<" ";
#define loopIN(n) for(int i = 0;i<n;i++) cin>>arr[i];
#define nextln cout<<"\n";
using namespace std;
 
void solve(int i){
ll n,s,left,median;
cin>>n>>s;
 
if(n%2 == 1) left = (n-n/2);
else left = (n-(n/2)+1);
 
median = s/left;
 
cout<<median<<endl; 
}
 
int main(){
ll t;
cin>>t;
for(int i = 1;i<=t;i++){
solve(i);
}
 
return 0;
}
    
