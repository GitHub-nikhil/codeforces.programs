#include <iostream>
#include <math.h>
#include <algorithm>
#include <iomanip>
#include <set>
#include <string.h>
#include <map>
#include <vector>
using namespace std;
 
int main(){
    int t;
    cin>>t;
    while(t--){
        int n,k;
        cin>>n>>k;
        if(n == k) cout<<0<<endl;
        else if(k>n){
            cout<<(k-n)<<endl;
            }
            else{
                if(n%2 == 0){
                    if(k%2 == 0) cout<<0<<endl;
                    else cout<<1<<endl;
                    }
                    else if(n%2 == 1){
                        if(k%2 == 1) cout<<0<<endl;
                        else cout<<1<<endl;
                        }
                }
        }
        return 0;
    }
