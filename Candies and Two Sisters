#define ll long long int
#define ull unsigned long long int
#define mod 1000000007
using namespace std;
 
int main(){
    int t;
    cin>>t;
    while(t--){
        ll n;
        cin>>n;
        if(n<3) cout<<0<<endl;
        else if(n%2 == 1){
            ll ans = n/2;
            cout<<ans<<endl;
            }
            else if(n%2 == 0){
                ll ans = (n/2)-1;
                cout<<ans<<endl;
                }
        }
        return 0;
    }
