//#define nextln cout<<"\n";
using namespace std;

void solve(){
    string s;
    cin>>s;
    ll a = 0,b = 0,c = 0;
    
    for(int i = 0;i<s.length();i++){
        if(s[i] == 'A') a++;
        else if(s[i] == 'B') b++;
        else if(s[i] == 'C') c++;
        }
        
        if(a+c == b) cout<<"YES"<<endl;
        else cout<<"NO"<<endl;
        
        return ;
    }
    
int main(){
ios::sync_with_stdio(false);
cin.tie(0);    
ll t = 1;
cin>>t;
for(int i = 1;i<=t;i++){
solve();
}

return 0;
}
