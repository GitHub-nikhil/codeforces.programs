#define loop(n) for(int i = 0;i<n;i++) cout<<arr[i]<<" ";
#define loopIN(n) for(int i = 0;i<n;i++) cin>>arr[i];
#define nextln cout<<endl;
using namespace std;
 
void solve(){
    ll c,d;
    cin>>c>>d;
    ll diff = abs(c-d);
    if(c == 0 && d == 0) cout<<0<<endl;    
    else if(c == d) cout<<1<<endl;
    else if(diff%2 == 1) cout<<-1<<endl;
    else{
        cout<<2<<endl;
        }
        
        return;
    }
int main(){
    int t=1;
    cin>>t;
    for(int i = 1;i<=t;i++){
        solve();
        }
    
    return 0;
    }
