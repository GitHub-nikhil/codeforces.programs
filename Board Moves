#include <iostream>
#include <math.h>
#include <algorithm>
#include <iomanip>
#include <set>
#include <string.h>
#include <map>
#include <vector>
#include <unordered_map>
#define ll long long int
#define ull unsigned long long int
#define mod 1000000007
using namespace std;
 
int main(){
    int t;
    cin>>t;
    while(t--){
        ll n;
        ull ans = 0;
        cin>>n;
        ll total = n/2;
        for(ll i = 1;i<=total;i++){
            ull curr = i*i;
            ans+=curr;
            }
            ans = 8*ans;
            cout<<ans<<endl;
        }
        return 0;
    }
