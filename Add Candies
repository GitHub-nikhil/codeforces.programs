
#include <iostream>
#include <math.h>
#include <algorithm>
#include <iomanip>
#include <set>
#include <string.h>
#include <map>
using namespace std;
int main()
{
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        if(n == 2){
            cout<<1<<endl;
            cout<<2<<endl;
            }
            else{
                cout<<n<<endl;
                int j = 1;
                for(int i = 1;i<=n;i++){
                    cout<<j<<" ";
                    j++;
                    }
                    cout<<endl;
                }
        }
        return 0;
    }
