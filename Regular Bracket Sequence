#include <iostream>
#include <math.h>
#include <algorithm>
#include <iomanip>
#include <set>
#include <string.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        string s;
        cin>>s;
        int len = s.length();
        bool flag = true;
        if(len%2 == 1) flag = false;
        if(s[0] == ')') flag = false;
        if(s[len-1] == '(') flag = false;
        if(flag == true) cout<<"YES"<<endl;
        else cout<<"NO"<<endl;
        }
        return 0;
    }
